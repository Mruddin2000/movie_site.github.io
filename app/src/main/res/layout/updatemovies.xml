<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableRow
        android:layout_width="491dp"
        android:layout_height="69dp"
        android:layout_weight="1"
        android:gravity="center">

        <EditText
            android:id="@+id/inputAreaIDUpdate"
            android:layout_column="0"
            android:autofillHints=""
            android:gravity="center"
            android:hint="ID"
            android:inputType="number"
            android:textSize="35dp" />
    </TableRow>

    <TableRow
        android:layout_width="491dp"
        android:layout_height="69dp"
        android:layout_weight="1"
        android:gravity="center">

        <EditText
            android:id="@+id/inputAreaTitleUpdate"
            android:layout_column="0"
            android:autofillHints=""
            android:gravity="center"
            android:hint="Title"
            android:textSize="35dp" />
    </TableRow>

    <TableRow
        android:layout_width="491dp"
        android:layout_height="69dp"
        android:layout_weight="1"
        android:gravity="center">

        <EditText
            android:id="@+id/inputAreaYearUpdate"
            android:layout_column="0"
            android:autofillHints=""
            android:gravity="center"
            android:hint="The Year"
            android:inputType="number"
            android:textSize="35dp" />
    </TableRow>

    <TableRow
        android:layout_width="491dp"
        android:layout_height="69dp"
        android:layout_weight="1"
        android:gravity="center">

        <EditText
            android:id="@+id/inputAreaDirectorUpdate"
            android:layout_column="0"
            android:autofillHints=""
            android:gravity="center"
            android:hint="The Director"
            android:textSize="35dp" />
    </TableRow>

    <TableRow
        android:layout_width="491dp"
        android:layout_height="69dp"
        android:layout_weight="1"
        android:gravity="center">

        <EditText
            android:id="@+id/inputAreaListOfActUpdate"
            android:layout_column="0"
            android:autofillHints=""
            android:gravity="center"
            android:hint="List of Actors/Actresses"
            android:textSize="35dp" />
    </TableRow>

    <TableRow
        android:layout_width="491dp"
        android:layout_height="69dp"
        android:layout_weight="1"
        android:gravity="center">

        <EditText
            android:id="@+id/inputAreaRatings"
            android:layout_column="0"
            android:autofillHints=""
            android:gravity="center"
            android:hint="Ratings"
            android:inputType="number"
            android:textSize="35dp" />
    </TableRow>

    <TableRow
        android:layout_width="491dp"
        android:layout_height="69dp"
        android:layout_weight="1"
        android:gravity="center">

        <EditText
            android:id="@+id/inputAreaReview"
            android:layout_column="0"
            android:autofillHints=""
            android:gravity="center"
            android:hint="Review"
            android:textSize="35dp" />
    </TableRow>

    <Button
        android:id="@+id/btnUpdate"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update"
        android:textSize="36sp"
        tools:layout_editor_absoluteX="155dp" />

</TableLayout>